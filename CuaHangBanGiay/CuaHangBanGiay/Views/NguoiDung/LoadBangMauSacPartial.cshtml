@using CuaHangBanGiay.Models;
@model IEnumerable<tb_BangMauSP>

<div class="bg-light p-4 mb-30">
    <form>
        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
            <input type="radio" class="custom-control-input" checked id="color-all" name="color">
            <input hidden id="sl-color" value="@Model.Count()">
            <label class="custom-control-label" for="color-all">Tất cả</label>
            <span class="badge border font-weight-normal">
                @Init.getSoLuongMatHang(ViewBag.ID_DanhMuc, ViewBag.KeyWord)
            </span>
        </div>

        @{
            for (int i = 0; i < Model.Count(); i++)
            {
                <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                    <input hidden id="id_color-@i" value="@Model.ElementAt(i).ID">
                    <input type="radio" class="custom-control-input" id="color-@i" name="color">
                    <label class="custom-control-label" for="color-@i">@Model.ElementAt(i).MauSac</label>
                    <span class="badge border font-weight-normal">
                        @Init.getSoLuongMau(Model.ElementAt(i).ID, ViewBag.ID_DanhMuc, ViewBag.KeyWord)
                    </span>
                </div>
            }
        }
    </form>
</div>

