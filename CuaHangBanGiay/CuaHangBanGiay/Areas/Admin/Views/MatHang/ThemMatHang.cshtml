
<script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>


<div class="modal fade" id="modalThemMatHang">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("ThemMatHang", "MatHang", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-header">
                    <h4 class="modal-title">Thêm mặt hàng</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Tên mặt hàng</label>
                                    <div class="col-md-12">
                                        <input type="text" name="TenMH" id="TenMH" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label>Danh mục</label>
                                @Html.DropDownList("DanhMuc", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Chọn ảnh mặt hàng</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input form-control" id="inputGroupFile" required name="AnhMH" aria-describedby="inputGroupFileAddon">
                                        <label class="custom-file-label" for="inputGroupFile">Chọn ảnh</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Giá bán (?.000 VNĐ)</label>
                                    <div class="col-md-12">
                                        <input type="number" class="form-control" id="inputGroupFile" name="GiaBan" required min="0">
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Mô tả sản phẩm</label>
                                    <div class="col-lg-12">
                                        <textarea name="MoTa" id="MoTa" required class="form-control"></textarea>
                                        <script>

                                            CKEDITOR.replace('MoTa');
                                            CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR;
                                            CKEDITOR.config.entities_latin = false;

                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6"></div>
                        </div>

                    </div>



                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>

<script>
    bsCustomFileInput.init();

</script>
