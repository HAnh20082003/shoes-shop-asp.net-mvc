@model CuaHangBanGiay.Models.tb_NguoiDung
@using CuaHangBanGiay.Models;

<script>
    CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR;
    CKEDITOR.config.entities_latin = false;
</script>

<!--Sửa KH-->
<script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>

<div class="modal fade" id="modalSuaThongTin-@Model.ID">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("SuaThongTin", "KhachHang", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-header">
                    <h4 class="modal-title">Sửa thông tin khách hàng</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ID)
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Ảnh hiện tại</label>
                                    <div class="form-group align-middle">
                                        @{
                                            if (Model.AnhDaiDien != null)
                                            {
                                                <img src="~/@Init.folderAvatarUser@Model.AnhDaiDien" style="display:block;margin:auto;width:200px;height:200px;" />
                                            }
                                            else
                                            {
                                                <img src="~/@(Init.folderAvatarUser)user.png" style="display:block;margin:auto;width:200px;height:200px;" />
                                            }
                                        }

                                    </div>

                                </div>
                            </div>
                            <div class="col-sm-6">


                                <div class="form-group">
                                    <label>Chọn ảnh đại diện</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input form-control" id="inputGroupFile04" name="Anh" aria-describedby="inputGroupFileAddon04">
                                        <label class="custom-file-label" for="inputGroupFile04">Chọn ảnh</label>
                                    </div>

                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Họ tên</label>
                                    <div class="col-md-12">
                                        <input type="text" name="HoTen" id="HoTen" value="@Model.TenHienThi" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label>Tên đăng nhập</label>
                                <div class="col-md-12">
                                    <input type="text" name="TenDN" value="@Model.TenDangNhap" id="TenDN" class="form-control" disabled required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label>Mật khẩu</label>
                                <div class="col-md-12">
                                    <input type="password" name="MatKhau" id="MatKhau" value="@Model.MatKhau" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label>Ngày Sinh</label>
                                <div class="col-md-12">
                                    <input type="date" name="NgaySinh" value="@(DateTime.Parse(Model.NgaySinh.ToString()).ToString("yyyy-MM-dd"))" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label>Giới tính</label>
                                <div class="col-md-12">
                                    <input type="radio" name="GioiTinh" value="1" @(Model.GioiTinh == 1 ? "checked" : "") required> Nam

                                </div>
                                <div class="col-md-12">
                                    <input type="radio" name="GioiTinh" value="0" @(Model.GioiTinh == 0 ? "checked" : "") required> Nữ

                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label>SDT</label>
                                <div class="col-md-12">
                                    <input type="text" name="SDT" id="SDT" value="@Model.SDT" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <label>Email</label>
                                <div class="col-md-12">
                                    <input type="text" name="Email" id="Email" value="@Model.Email" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <div class="col-lg-12">
                                        <textarea name="DiaChi" id="DiaChi-@Model.ID" required class="form-control">@Model.DiaChi</textarea>
                                        <script>
                                            document.getElementById('SuaThongTin-@Model.ID').onclick = function () {
                                                CKEDITOR.replace('DiaChi-@Model.ID');
                                            }
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>



                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>

<script>
    bsCustomFileInput.init();
</script>

